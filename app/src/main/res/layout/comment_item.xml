<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgavt"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgavt"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:layout_toRightOf="@+id/imgavt"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtComment"
        android:layout_toRightOf="@+id/imgavt">

        <TextView

            android:id="@+id/txtTime"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 minute"
            android:textColor="#2e000000"
            android:textSize="12sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_alignBottom="@+id/imgavt"
            android:layout_centerInParent="true"
            android:layout_marginLeft="9dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/txtTime"
            android:layout_toRightOf="@+id/txtTime"
            android:background="#3366ff" />

        <TextView

            android:id="@+id/txtLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtComment"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/txtTime"
            android:text="Like"
            android:textColor="#3366ff"
            android:textSize="12sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_alignBottom="@+id/imgavt"
            android:layout_centerInParent="true"
            android:layout_marginLeft="9dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/txtTime"
            android:layout_toRightOf="@+id/txtTime"
            android:background="#3366ff" />

        <TextView
            android:id="@+id/countlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/ic_like3"
            android:text="  1"
            android:textColor="#3366ff" />
        <View
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_alignBottom="@+id/imgavt"
            android:layout_centerInParent="true"
            android:layout_marginLeft="9dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/txtTime"
            android:layout_toRightOf="@+id/txtTime"
            android:background="#3366ff" />

        <TextView
            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Reply"
            android:textColor="#3366ff" />
    </LinearLayout>










</RelativeLayout>
